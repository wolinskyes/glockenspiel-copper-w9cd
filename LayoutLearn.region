<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Space+Mono&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/tiny-slider.css">

    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="primary_page {squarespace.page-classes}">
    <div class="site-container">
      <header class="site-header">
        {@|apply site-navigation.block}
      </header>

      <main class="content-container" role="main">
        <squarespace:query collection="library" limit="1" category="Monthly Pick">
          {@|apply hero/learn-hero.block}
        </squarespace:query>
        <squarespace:query collection="library" featured="true" limit="5">
          {@|apply hero/learn-fastfive.block}
        </squarespace:query>
        <squarespace:query collection="library" limit="20">
          {@|apply hero/learn-filter.block}
          {@|apply hero/learn-list.block}
        </squarespace:query>
      </main>
      {@|apply common/footer.block}
    </div>
    <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>
    <script src="/scripts/learnpage.min.js"></script>
  </body>
</html>
