<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Space+Mono&display=swap" rel="stylesheet">

    <!-- include system scripts, page meta, and header code injection -->
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    <div class="site-container">
      <header class="site-header">
        <!-- site navigation -->
        {@|apply site-navigation.block}
      </header>

      <main class="content-container" role="main">
        {.section website}
          <section class="max-wrapper">
            {@|apply hero/homepage-hero.block}
          </section>

          <section class="fullwidth-wrapper">
            {@|apply hero/homepage-whoweare.block}
          </section>

          <section class="fullwidth-wrapper">
            {@|apply hero/homepage-values.block}
          </section>

          <section class="fullwidth-wrapper">
            {@|apply hero/homepage-impact.block}
          </section>



        {.end}
      </main>


      {@|apply common/footer.block}
    </div>
  </body>
</html>
