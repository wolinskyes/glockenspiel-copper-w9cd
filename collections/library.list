<!-- item loop -->
{.repeated section items}

  <article id="post-{id}" class="library-list-item {@|item-classes}" data-item-id="{id}">

    <!-- post title -->
    <h1 class="title" data-content-field="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        <a href="{fullUrl}">{title}</a>
      {.end}
    </h1>

  </article>

{.or}

  <!-- no items means no blog posts -->
  <p><em>No library reads yet.</em></p>

{.end}